    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch BPM App PostgreSQL",
            "request": "launch",
            "mainClass": "com.pam.sample.BPMApplication",
            "projectName": "business-application-service",
            "vmArgs": "-Xms128m -Xmx256m -Dspring.profiles.active=postgres",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "start-podman-env",
            "postDebugTask": "stop-podman-env"
        }
    ]
}